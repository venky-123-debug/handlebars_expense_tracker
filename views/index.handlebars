{{#each expenses}}

  <div class="card">
    <div class="card-header">
      {{this.description}}
    </div>
    <div class="card-body">
      <h5 class="card-title">{{this.amount}}</h5>
      <p class="card-text">{{formatDate this.date}}</p>
      <a
        href="delete-expense?id={{this._id}}"
        class="btn btn-danger float-right"
      >Delete</a>
    </div>
  </div>
{{/each}}