<h1 class="text-center">Expense Tracker</h1>

<div class="row mb-4">
  <div class="col-md-6">
    <form action="/expense/add" method="POST" class="form-inline">
      <input
        type="text"
        name="description"
        class="form-control mr-2"
        placeholder="Description"
        required
      />
      <input
        type="number"
        step="0.01"
        name="amount"
        class="form-control mr-2"
        placeholder="Amount"
        required
      />
      <input type="date" name="date" class="form-control mr-2" required />
      <button type="submit" class="btn btn-primary">Add Expense</button>
    </form>
  </div>
  <div class="col-md-6 text-right">
    <h3>Total: {{totalAmount}}&nbsp;Rs/-</h3>
  </div>
</div>

